{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "*/*/dist", "*/*/node_modules"]
}
